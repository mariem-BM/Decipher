{% extends ('baseback/base.html.twig') %}
{% block title %}Gestion des Plannings
{% endblock %}


{% block body %}
	<h1>Gestion des Plannings</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom_planning</th>
				<th>DateDebut_planning</th>
				<th>DateFin_planning</th>
				<th>Destination_planning</th>
				<th>Activites_planning</th>
				<th>Description_planning</th>
				<th>Periode_planning</th>
				<th>Prix_planning</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for planinng in planinngs %}
				<tr>
					<td>{{ planinng.id }}</td>
					<td>{{ planinng.nomPlanning }}</td>
					<td>{{ planinng.dateDebutPlanning ? planinng.dateDebutPlanning|date('Y-m-d') : '' }}</td>
					<td>{{ planinng.dateFinPlanning ? planinng.dateFinPlanning|date('Y-m-d') : '' }}</td>
					<td>{{ planinng.destinationPlanning }}</td>
					<td>{{ planinng.activitesPlanning }}</td>
					<td>{{ planinng.descriptionPlanning }}</td>
					<td>{{ planinng.periodePlanning }}</td>
					<td>{{ planinng.prixPlanning }}</td>
					<td>
						<a href="{{ path('planinng_show', {'id': planinng.id}) }}">show</a>
						<a href="{{ path('planinng_edit', {'id': planinng.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('planinng_new') }}">Create new</a>
{% endblock %}
