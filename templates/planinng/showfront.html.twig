	<table class="table">
	<th></th>
			<td><img src ="{{ asset('uploads/images/' ~ planinng.imgPlaninng)}}"
					alt ="" style = "width: 690px"></td>
		</tbody>
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ planinng.id }}</td>
