{% extends ('baseback/base.html.twig') %}
{% block title %}Gestion des Reclamations
{% endblock %}


{% block body %}
	<h1>Gestion des reclamations</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Description_reclamation</th>
				<th>Date_reclamation</th>
				<th>Etat_reclamation</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reclamation in reclamations %}
				<tr>
					<td>{{ reclamation.id }}</td>
					<td>{{ reclamation.descriptionReclamation }}</td>
					<td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
					<td>{{ reclamation.etatReclamation }}</td>
					<td>
						<a href="{{ path('reclamation_show', {'id': reclamation.id}) }}">show</a>
						<a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('reclamation_new') }}">Create new</a>
{% endblock %}
