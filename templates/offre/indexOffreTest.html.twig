{% extends ('basefront/base.html.twig') %}
{% block body %}

	<section class="py-5" id="services">
		<div class="container py-5">
			<header class="mb-4 text-center mb-5">
				<p class="text-serif mb-0 text-primary">Offres
				</p>
				<h2 class="text-uppercase">Nos offres
				</h2>
			</header>

			<div class="row text-center gy-4">
				{% for offre in offres %}
					<div class="col-lg-4"><img src="{{ asset ('Front/img/travel.png')}}" alt="..." width="100">
						<h3 class="h5">{{ offre.nomOffre }}</h3>
						<p class="text-muted">{{ offre.descriptionOffre }}</p>
						<h3 class="h5">{{ offre.prixOffre }}</h3>

						<p class="text-muted">{{ offre.dureeOffre }}</p>


						<p class="text-muted"
							{{offre.planning}}</p>

						<p class="text-muted"
							{{ offre.reduction }}
						</p>
						<div class="col-lg-3 text-lg-end">
							<a class="btn btn-outline-primary px-4" href="{{ path('offre_showFront', {'id': offre.id}) }}">
								Consulter offre</a>
						</div>
				
				</div>
			
				{% endfor %}
				</div>
		</section>
	{% endblock %}
